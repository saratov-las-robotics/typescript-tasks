{
  "type": "module",
  "scripts": {
    "start": "tsc && npm-run-all -y -p build watch",
    "watch": "nodemon -e js -q dist/circle.js -r dotenv/config .env",
    "build": "tsc --watch",
    "minify": "uglifyjs dist/library.types.js -c -m -o dist/library.types.js && uglifyjs dist/library.js -c -m -o dist/library.js",
    "lint": "eslint --ext .ts ./src"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.13",
    "readline-sync": "^1.4.10"
  },
  "devDependencies": {
    "@types/node": "^16.10.3",
    "@types/nodemon": "^1.19.1",
    "@types/prompt-sync": "^4.1.1",
    "@types/readline-sync": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "tsc": "^2.0.3",
    "typescript": "^4.4.3",
    "uglify-js": "^3.14.3",
    "yarn-run-all": "^3.1.1"
  }
}
